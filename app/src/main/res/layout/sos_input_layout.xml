<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="15dp"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/cig_id"
                android:layout_width="92dp"
                android:layout_height="92dp"
                android:layout_marginTop="32dp"
                android:src="@drawable/camera"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/share_photo_video_location_id"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="52dp"
                android:background="#2E7D32"
                android:textColor="#ffffff"
                android:text="Send photo video location"
                app:layout_constraintEnd_toEndOf="@+id/cig_id"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="@+id/cig_id"
                app:layout_constraintTop_toBottomOf="@+id/cig_id" />

            <Button
                android:id="@+id/send_location_periodically_id"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="#2E7D32"
                android:textColor="#ffffff"
                android:text="Send Location Periodically"
                app:layout_constraintEnd_toEndOf="@+id/share_photo_video_location_id"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/share_photo_video_location_id"
                app:layout_constraintTop_toBottomOf="@+id/share_photo_video_location_id" />

            <Button
                android:id="@+id/stoplocationsharing_id"
                android:layout_width="300dp"
                android:layout_height="44dp"
                android:layout_marginTop="20dp"
                android:background="#2E7D32"
                android:textColor="#ffffff"
                android:text="Stop Location"
                app:layout_constraintEnd_toEndOf="@+id/send_location_periodically_id"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/send_location_periodically_id"
                app:layout_constraintTop_toBottomOf="@+id/send_location_periodically_id" />

            <Button
                android:id="@+id/start_geofence_id"
                android:layout_width="300dp"
                android:layout_height="42dp"
                android:layout_marginTop="24dp"
                android:background="#2E7D32"
                android:textColor="#ffffff"
                android:text="Start GeoFence"
                app:layout_constraintEnd_toEndOf="@+id/stoplocationsharing_id"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/stoplocationsharing_id"
                app:layout_constraintTop_toBottomOf="@+id/stoplocationsharing_id" />

            <Button
                android:id="@+id/stop_geofence_id"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="#2E7D32"
                android:textColor="#ffffff"
                android:text="Stop GeoFence"
                app:layout_constraintEnd_toEndOf="@+id/start_geofence_id"
                app:layout_constraintHorizontal_bias="0.666"
                app:layout_constraintStart_toStartOf="@+id/start_geofence_id"
                app:layout_constraintTop_toBottomOf="@+id/start_geofence_id" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>